{
  "name": "honeycomb-grid",
  "version": "0.2.1",
  "description": "Hex grid without views for usage in node or with optional multiple views for usage in the browser. Written in javascript.",
  "main": "lib/honeycomb.min.js",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "coverage": "babel-node $(npm bin)/isparta cover --include-all-sources --report html $(npm bin)/_mocha -- --recursive > /dev/null",
    "dev": "webpack --progress --colors --watch",
    "docs": "documentation readme ./src --section Documentation",
    "docs:serve": "documentation serve ./src --watch",
    "lint": "eslint src test --fix; exit 0",
    "prepublish": "npm test && npm run docs && npm run build",
    "start": "npm run build && node lib/honeycomb.js",
    "test": "mocha --compilers js:babel-core/register --require ./test/config.js --recursive",
    "test:watch": "npm test -- --watch"
  },
  "author": "Abbe Keultjes <flauwekeul@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "documentation": "4.0.0-beta.18",
    "eslint": "^3.1.1",
    "isparta": "^4.0.0",
    "jsdom": "^9.3.0",
    "mocha": "^3.0.2",
    "mocha-jsdom": "^1.1.0",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.13.1"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "dependencies": {
    "is-dom": "^1.0.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flauwekeul/honeycomb.git"
  },
  "keywords": [
    "hex",
    "hexagon",
    "hex-grid",
    "node",
    "es2015"
  ],
  "bugs": {
    "url": "https://github.com/flauwekeul/honeycomb/issues"
  },
  "homepage": "https://github.com/flauwekeul/honeycomb#readme"
}
