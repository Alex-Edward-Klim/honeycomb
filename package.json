{
  "name": "honeycomb",
  "version": "0.1.0",
  "description": "Hex grid without views for usage in node or with optional multiple views for usage in the browser. Written in javascript.",
  "main": "src/index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "coverage": "babel-node $(npm bin)/isparta cover --include-all-sources --report html $(npm bin)/_mocha -- --recursive > /dev/null",
    "dev": "webpack --progress --colors --watch",
    "lint": "eslint src test; exit 0",
    "lint:fix": "eslint src test --fix; exit 0",
    "start": "npm run build && node dist/honeycomb.js",
    "test": "mocha --compilers js:babel-core/register --require ./test/config.js --recursive",
    "test:watch": "npm test -- --watch"
  },
  "author": "Abbe Keultjes <flauwekeul@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "eslint": "^2.11.1",
    "isparta": "^4.0.0",
    "mocha": "^2.5.3",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.13.1"
  },
  "directories": {
    "dist": "dist",
    "test": "test"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flauwekeul/honeycomb.git"
  },
  "keywords": [
    "hex",
    "hexagon",
    "hex-grid",
    "node",
    "es2015"
  ],
  "bugs": {
    "url": "https://github.com/flauwekeul/honeycomb/issues"
  },
  "homepage": "https://github.com/flauwekeul/honeycomb#readme"
}
